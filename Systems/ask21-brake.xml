<?xml version="1.0"?>

<system name="ASK21: Brake">
	<channel name="Speed Brake">
		<fcs_function name="fcs/speedbrake-cmd">
			<function>
				<table>
					<independentVar lookup="row">/controls/engines/engine/throttle</independentVar>
					<tableData>
						0	1
						1	0
					</tableData>
				</table>
			</function>
		</fcs_function>
		
		<fcs_function name="fcs/speedbrake-int-norm">
			<function>
				<table>
					<independentVar lookup="row">fcs/speedbrake-cmd</independentVar>
					<tableData>
						0	0
						0.9	1
						1	1
					</tableData>
				</table>
			</function>
		</fcs_function>
		
		<kinematic name="Speedbrake Control">
			<input>fcs/speedbrake-int-norm</input>
			<traverse>
				<setting>
					<position> 0 </position>
					<time>     0 </time>
				</setting>
				<setting>
					<position> 1 </position>
					<time>     0 </time>
				</setting>
			</traverse>
			<output>fcs/speedbrake-pos-norm</output>
		</kinematic>
	</channel>
	<channel name="Wheel Brake">
		<fcs_function name="fcs/wheelbrake-cmd">
			<function>
				<table>
					<independentVar lookup="row">fcs/speedbrake-cmd</independentVar>
					<tableData>
						0	0
						0.9	0
						1	1
					</tableData>
				</table>
			</function>
			<output>fcs/left-brake-cmd-norm</output>
		</fcs_function>
	</channel>
</system>
